<%= simple_form_for(@user, :html => { :class => 'form-horizontal' } ) do |f| %>
  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :age %>
    <%= f.input :level %>
    <%= f.input :major %>
    <%= f.input :subject %>
    <%= f.input :phone %>
    <%= f.input :email %>
  </div>
  <div class="form-actions">
    <div><%= submit_tag "确 定", :class => 'btn btn-primary' %></div>
  </div>
<% end %>
