<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= stylesheet_link_tag    "/kindeditor/themes/default/default.css"%>
  <%= javascript_include_tag "/kindeditor/kindeditor-min.js"%>
  <%= javascript_include_tag "/kindeditor/lang/zh_CN.js"%>
  <script type="text/javascript">
    var editor_bk_purpose_importance;
    var editor_content_question;
    var editor_cond_outcome;
    var editor_feature_creation;
    var editor_process;
    var editor_opinion1;
    var editor_opinion2;
    var allowFileManager_true = {allowFileManager : true};
    KindEditor.ready(function(K) {
      editor_bk_purpose_importance = K.create('#post_bk_purpose_importance', allowFileManager_true);
      editor_content_question = K.create('#post_content_question', allowFileManager_true);
      editor_cond_outcome = K.create('#post_cond_outcome', allowFileManager_true);
      editor_feature_creation = K.create('#post_feature_creation', allowFileManager_true);
      editor_process = K.create('#post_process', allowFileManager_true);
      editor_opinion1 = K.create('#post_opinion1', allowFileManager_true);
      editor_opinion2 = K.create('#post_opinion2', allowFileManager_true);
    });
  </script>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :grade_or_class %><br />
    <%= f.text_field :grade_or_class %>
  </div>
  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :school %><br />
    <%= f.text_field :school %>
  </div>
  <div class="field">
    <%= f.label :research_time %><br />
    <%= f.text_field :research_time %>
  </div>
  <div class="field">
    <%= f.label :bk_purpose_importance %><br />
    <%= f.text_area :bk_purpose_importance , :cols=>120%>
  </div>
  <div class="field">
    <%= f.label :content_question %><br />
    <%= f.text_area :content_question , :cols=>120%>
  </div>
  <div class="field">
    <%= f.label :cond_outcome %><br />
    <%= f.text_area :cond_outcome , :cols=>120%>
  </div>
  <div class="field">
    <%= f.label :feature_creation %><br />
    <%= f.text_area :feature_creation , :cols=>120%>
  </div>
  <div class="field">
    <%= f.label :process %><br />
    <%= f.text_area :process , :cols=>120%>
  </div>
  <div class="field">
    <%= f.label :opinion1 %><br />
    <%= f.text_area :opinion1 , :cols=>120%>
  </div>
  <div class="field">
    <%= f.label :opinion2 %><br />
    <%= f.text_area :opinion2, :cols=>120 %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit')%>
  </div>
<% end %>
