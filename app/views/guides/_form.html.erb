<%= simple_form_for(@guide, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :content, as: :kindeditor, input_html: { height: '700px' }  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '确 定', :class => "btn btn-primary" %>
    <%= link_to '取 消', guides_path, :class => "btn" %>
  </div>
<% end %>
