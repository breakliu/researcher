<!DOCTYPE html>
<html>
	<head>
		<title><%= t('.title') %></title>
		<%= stylesheet_link_tag    "application" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
        <div class="menu">
		<% if current_user %>
			<%= t('.current_user_as') %> <%= current_user.username %>.
			<%= link_to t('.logout'), logout_path %>
		<% else %>
			<%= link_to t('.signup'), signup_path %> | 
			<%= link_to t('.login'), login_path %>.
		<% end %>
        </div>

		<%= yield %>

	</body>
</html>
